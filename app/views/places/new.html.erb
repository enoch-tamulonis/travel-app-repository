<div class="w-full h-screen flex flex-col">
  <%= turbo_frame_tag :modal do %>
    <div class="fixed h-screen w-full top-0 flex justify-center pt-40" data-modal-target="container">
        <div class="bg-gray-800 bg-opacity-50 w-full h-screen fixed top-0" data-action="click->modal#close"></div>
        <div class="w-3/4 lg:w-1/2 mx-auto bg-gray-50 rounded-lg self-start p-4 fixed">
          <div class="w-full flex justify-between">
            <h1 class="text-4xl my-4 text-gray-800"> Create a new place </h1>
            <a href="#" class="text-gray-800 font-semibold" data-action="modal#close"> X </a>
          </div>
          <div class="w-full bg-gray-50 rounded-lg p-4">
            <%= render "form", place: @place %>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>